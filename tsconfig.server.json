{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./server/dist",
    "rootDir": "./server"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}